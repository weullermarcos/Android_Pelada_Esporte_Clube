<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.weuller.peladaesporteclube.MapFootballFieldActivity">

    <LinearLayout
        android:id="@+id/map_football_field_lltMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_football_field_lltBottomScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <fragment
            android:id="@+id/map_football_field_fgmtBottomMap"
            android:name="com.example.weuller.peladaesporteclube.BottomMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_bottom_map" />

    </LinearLayout>



</LinearLayout>
